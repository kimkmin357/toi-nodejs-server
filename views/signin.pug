extends base.pug

block contents
    div.p-8
        h1.text-4xl.font-bold.text-center.mt-8 Fitness Home👋
        div.flex.flex-col.mt-12.items-center.space-y-2
            img.logo(src="/public/images/home.png"  display:block; margin:auto;)
        form.flex.flex-col.mt-16.space-y-2(method="POST" action="/api/signin")
            input.rounded.border.border-gray-200.p-2(name="email" type="email" placeholder="이메일")
            input.rounded.border.border-gray-200.p-2(name="password" type="password" placeholder="비밀번호")
            button.primary-btn.primary-btn.red-btn 이메일로 로그인
        div.flex.flex-row.justify-center.space-x-2.mt-4
            a.text-sm.text-gray-600(href="/api/request-reset-password") 비밀번호 초기화
            a.text-sm.ml-2.text-gray-600(href="/api/signup") 이메일로 회원가입
        div.flex.flex-col.mt-12.items-center.space-y-2
            a#fb-login.primary-btn
                img.logo(src="/public/logos/facebook.png")
                div.text.text-lg Facebook으로 로그인
            a#kakao-login.primary-btn(href="/api/auth/kakao_login")
                img.logo(src="/public/logos/kakao.png")
                div.text.text-lg 카카오 로그인
            a#naver-login.primary-btn(href="/api/auth/naver_login")
                img.logo(src="/public/logos/naver.png")
                div.text.text-lg 네이버 아이디로 로그인

